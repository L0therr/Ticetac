<%- include('header') %>


      <div class="container">
        <div class="row forSign">

          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">

              <h4 class="titleForm">Sign-In</h4>

              <form action="/users/signin" method="POST">
                <div class="form-group">
                  <input name="inmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="form-group">
                  <input name="inpswd" type="password" class="form-control" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>

            </div>

          </div>

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign-Up</h4>

              <form action="/users/signup" method="POST">
                <div class="form-group">
                  <input name="upln" type="text" class="form-control" placeholder="Last Name">
                </div>
                <div class="form-group">
                  <input name="upfn" type="text" class="form-control" placeholder="First name">
                </div>
                <div class="form-group">
                  <input name="upmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                </div>
                <div class="form-group">
                  <input name="uppswd" type="password" class="form-control"  placeholder="Password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>
            </div>

          </div>



        </div>
      </div>

<%- include('footer') %>
