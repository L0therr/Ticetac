<%- include('header') %>


      <div class="container">
        <div class="row">

          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">

              <h4 class="titleForm">Sign In</h4>

              <form action="/users/signin" method="POST">
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="inmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="inpswd" type="password" class="form-control" placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>

            </div>

          </div>

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 text-center">

            <div class="formArea">
              <h4 class="titleForm">Sign Up</h4>

              <form action="/users/signup" method="POST">
                <div class="form-group">
                  <label for="exampleInputUsername">Name</label>
                  <input name="upln" type="text" class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                  <label for="exampleInputUserFirstname">Firstname</label>
                  <input name="upfn" type="text" class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="upmail" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="uppswd" type="password" class="form-control"  placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-danger">Confirm</button>
              </form>
            </div>

          </div>



        </div>
      </div>

<%- include('footer') %>
