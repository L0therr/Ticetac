                <input name="on" type="date" class="form-control" aria-label="new city name" required>
                <div class="input-group-append">
                  <button class="btn btn-danger" type="submit" id="button-addon2">Go</button>
                </div>
              </div>
            </form>
          </div>
          <div class="col-12 col-lg-6">
          </div>

      </div>

