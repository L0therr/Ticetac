<%- include('header') %>


   <!-- GRID -->
   <div class="container">
      <div class="row">
          <div class="col-12 offset-lg-6 col-lg-6">
            
            
            <div>My tickets</div>
           
            <!--liste des billets réservés section-->
            <div class="card-body">
                <div class="table-responsive">
                  <table id="order-info" class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                      <thead>
                        <tr>
                          <th>N°</th>
                          <th>Journey</th>
                          <th>Date</th>
                          <th>Departure time</th>
                          <th>Price</th>

  
                        </tr>
                      </thead>
                    </thead>
                    
                    <tbody>

                      <% var total = 0;
                        for(var i=0;i<orders.length;i++){ %>
                      <tr>
                        <td><%= i + 1 %></td>
                        <td><%= orders[i].departure %> <i class="fas fa-long-arrow-alt-right"></i> <%= orders[i].arrival %></td>
                        <td><%= orders[i].date %></td>
                        <td><%= orders[i].departureTime %></td>
                        <td><%= orders[i].price %>€</td>  
                      </tr>

                      <%total =+ orders[i].price %> <%} %>
                      
                      <tr>
                        <td colspan="4">Total:</td>
                        <td><%= total %>€</td>
                      </tr>




                    </tbody>
                  </table>




          </div>
        </div>

      </div>
   </div>
   
   <%- include('footer') %>